<p style="color: green"><%= notice %></p>

<%= render @produto %>

<div>
  <%= link_to "Edit this produto", edit_produto_path(@produto) %> |
  <%= link_to "Back to produtos", produtos_path %>

  <%= button_to "Destroy this produto", @produto, method: :delete %>
</div>

<% if @produto.imagem.attached? %>
  <p>
    <strong>Imagem:</strong><br>
    <%= image_tag @produto.imagem, style: "width: 400px; height: auto;" %>
  </p>
<% end %>