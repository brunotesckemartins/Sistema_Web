<%= form_with(model: produto) do |form| %>
  <% if produto.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(produto.errors.count, "error") %> prohibited this produto from being saved:</h2>

      <ul>
        <% produto.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div>
    <%= form.label :categoria_id, "Categoria" %>
    <%= form.collection_select :categoria_id, Categoria.all, :id, :nome, prompt: 'Selecione uma categoria' %>
  </div>

  <div>
    <%= form.label :imagem, style: "display: block" %>
    <%= form.file_field :imagem %>
  </div>

  <div>
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label :preco, style: "display: block" %>
    <%= form.text_field :preco %>
  </div>

  <div>
    <%= form.label :categoria, style: "display: block" %>
    <%= form.text_field :categoria %>
  </div>

  <div>
    <%= form.label :disponivel, style: "display: block" %>
    <%= form.checkbox :disponivel %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
